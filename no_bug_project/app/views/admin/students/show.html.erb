<p>name: <%= @student.name %></p>
<p>phone: <%= @student.phone %></p>
<p>email: <%= @student.email %></p>
<p>sex: <%= Student::SEX[@student.sex] %></p>
<p>birth: <%= @student.birth %></p>
<p>start_free_time: <%= @student.start_free_time.strftime("%I:%m %p") %></p>
<p>expired_free_time: <%= @student.expired_free_time.strftime("%I:%m %p") %></p>

<div class="mt-4">
  <%= link_to 'Edit', edit_admin_student_path(@student), class: 'btn btn-success' %>
  <%= link_to 'Back', admin_students_path, class: 'btn btn-success' %>
</div>
