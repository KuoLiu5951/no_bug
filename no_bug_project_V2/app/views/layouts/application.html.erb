<!DOCTYPE html>
<html>
<head>
  <title>No_bug Projects</title>
  <%= csrf_meta_tags %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=>'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track'=>'reload' %>
</head>

<body>
<div class="container" style="margin-bottom: 40px;">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">HOME</a>
    <% if user_signed_in? %>
      <a class="navbar-brand" href="#"><%= current_user.email %></a>
      <span style="margin: 0 10px;">|</span>
      <%= link_to 'log out', destroy_user_session_path, method: :delete , class: "navbar-brand" %>
    <% else %>
      <%= link_to 'login', new_user_session_path, class: "navbar-brand" %>
      <span style="margin: 0 10px;">|</span>
      <%= link_to 'sign up', new_user_registration_path, class: "navbar-brand" %>
    <% end %>
  </nav>

  <% if notice.present? %>
    <div class="alert alert-primary" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>