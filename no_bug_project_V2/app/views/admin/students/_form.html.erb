<%= simple_form_for [:admin, @student] do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <%= f.input :sex, as: :radio_buttons, collection: [[0, 'girl'], [1, 'boy']], label_method: :second, value_method: :first %>
  <%= f.input :birth, as: :date %>
  <%= f.input :free_day %>
  <%= f.input :start_free_time, as: :date %>
  <%= f.input :expired_free_time, as: :date %>

  <%= f.button :submit %>
<% end %>
