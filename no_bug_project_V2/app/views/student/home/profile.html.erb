<%= simple_form_for(current_student, as: :student, method: :put, url: student_profile_path) do |f| %>

  <%= f.input :name, label: 'Your name' %>
  <%= f.input :phone, label: 'Your phone' %>
  <%= f.input :email, label: 'Your email' %>
  <%= f.input :free_day, label: 'Your free weekday' %>
<%= f.input :start_free_time, as: :time %>
<%= f.input :expired_free_time, as: :time %>
<%= f.input :sex , as: :radio_buttons, collection: [[0, 'girl'], [1, 'boy']], label_method: :second, value_method: :first %>
<%= f.input :birth, as: :date, as: :date, start_year: Date.today.year - 30,end_year: Date.today.year, discard_day: true,order: [:month, :year] %>

<%= f.submit 'update profile', class: "btn btn-primary" %>
<% end %>

<%= link_to 'back', student_root_path, class: 'btn btn-primary mt-4' %>
